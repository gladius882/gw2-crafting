generator client {
  provider = "prisma-client"
  output   = "./prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BankMaterial {
  id    Int    @id @default(autoincrement())
  item_id Int @unique
  count Int @default(0)

  item Item @relation(fields: [item_id], references: [id])
}

model BankItem {
  id Int @id @default(autoincrement())
  item_id Int @unique
  count Int @default(0)

  item Item @relation(fields: [item_id], references: [id])
}

model Rarity {
  id        Int    @id @default(autoincrement())
  name      String @unique
  min_level Int?
  max_level Int?
  color     String?

  items Item[]
}

model Discipline {
  id   Int    @id @default(autoincrement())
  name String @unique

  recipes RecipeDiscipline[]
}

model Item {
  id           Int     @id @default(autoincrement())
  name         String
  type         String
  level        Int     @default(0)
  vendor_value Int     @default(0)
  chat_link    String?
  icon         String?
  gw2_id       Int     @unique
  is_wishlised Boolean @default(false)

  rarity_id Int
  rarity    Rarity @relation(fields: [rarity_id], references: [id])

  recipes     Recipe[] // Receptury, które tworzą ten item
  ingredients RecipeIngredient[] // Receptury, w których ten item jest składnikiem
  bank        BankMaterial[]
  bank_item   BankItem[]
}

model Recipe {
  id                Int     @id @default(autoincrement())
  type              String
  output_item_count Int
  output_item_id    Int
  output_item       Item    @relation(fields: [output_item_id], references: [id])
  time_to_craft     Int     @default(1000)
  min_rating        Int
  chat_link         String?
  discovered        Boolean @default(false)
  gw2_id            Int     @unique

  ingredients RecipeIngredient[]
  disciplines RecipeDiscipline[]
}

model RecipeIngredient {

  recipe_id Int
  recipe    Recipe @relation(fields: [recipe_id], references: [id])

  item_id Int
  item    Item @relation(fields: [item_id], references: [id])

  count Int

  @@id([recipe_id, item_id])
}

model RecipeDiscipline {

  recipe_id Int
  recipe    Recipe @relation(fields: [recipe_id], references: [id])

  discipline_id Int
  discipline    Discipline @relation(fields: [discipline_id], references: [id])

  @@id([recipe_id, discipline_id])
}

model Account {
  id Int @id @default(autoincrement())
  gw2_id String @unique
  age Int @default(0)
  world Int?
  fractal_level Int?
  daily_ap Int @default(0)
  monthly_ap Int @default(0)
  wvw_rank Int @default(1)
}

model Race {
  id Int @id @default(autoincrement())
  name String @unique

  characters Character[]
}

model Character {
  id Int @id @default(autoincrement())
  name String @unique
  level Int @default(1)
  age Int?
  deaths Int @default(0)
  race_id Int
  gender String

  race Race @relation(fields: [race_id], references: [id])
}