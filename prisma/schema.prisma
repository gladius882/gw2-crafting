generator client {
  provider = "prisma-client"
  output   = "./prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Material {
  id Int @id @default(autoincrement())
  name String
  order Int?
}

model Rarity {
  id Int @id @default(autoincrement())
  name String @unique
  min_level Int?
  max_level Int?

  items Item[]
}

model Item {
  id Int @id @default(autoincrement())
  name String
  type String
  level Int @default(0)

  vendor_value Int @default(0)
  chat_link String?
  icon String?
  gw2_id Int @unique

  rarity_id Int
  rarity Rarity @relation(fields: [rarity_id], references: [id])
}

model Discipline {
  id Int @id @default(autoincrement())
  name String
}

